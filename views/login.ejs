<% layout("layouts/boilerplate") %>

<% layout("layouts/boilerplate") %>

<div class="d-flex justify-content-center align-items-center vh-100">
    <form class="p-4 border rounded bg-light needs-validation" style="min-width: 300px;" action="/login" method="POST" novalidate>
        <h2 class="text-center mb-4">ユーザーログイン</h2>
        
        <div class="mb-3">
            <label for="username" class="form-label">ユーザー名</label>
            <input type="text" class="form-control" id="username" name="username" autofocus required>
            <div class="invalid-feedback">
                ユーザー名は必須です。
            </div>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">パスワード</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <div class="invalid-feedback">
                パスワードは必須です。
            </div>
        </div>

        <button type="submit" class="btn btn-success w-100">ログインする</button>
    </form>
</div>

<script>
    (function () {
        'use strict'

        // 全てのフォームを取得
        var forms = document.querySelectorAll('.needs-validation')
        //フォームにイベントリスナーを設定
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) { // フォーム全体が有効かチェック
                        event.preventDefault() // 無効ならデフォルトの送信を停止
                        event.stopPropagation() // イベント伝播も停止
                    }

                    form.classList.add('was-validated') 
                }, false)
            })
    })()
</script>